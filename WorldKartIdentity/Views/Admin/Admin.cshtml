@model WorldKartIdentity.ViewModel.TrackViewModel

@{
    ViewData["Title"] = "Admin Library";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/adminpanel.css" asp-append-version="true" />
}


<div class="container-fluid admin-body">
    <div class="row">
        <div class="col-md-2 bg-light sidebar p-3">
            <h4 class="text-center mb-4">Админ Меню</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Админ Табло</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="TrackGallery" asp-controller="Track">Писти</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="TrackRequests" asp-controller="Admin">Заявени писти</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="CreateTrack" asp-controller="Track">Създаване на Писти</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Users" asp-controller="Admin">Потребители</a>
                </li>
            </ul>
        </div>

        <div class="col-md-10">
            <h2 class="mb-4 text-white">Админ Панел</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card card-custom mb-3 shadow">
                        <div class="card-body text-center">
                            <h5 class="card-title">Картинг Писти</h5>
                            <h2 class="card-text"></h2>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-custom mb-3 shadow">
                        <div class="card-body text-center">
                            <h5 class="card-title">Траектории</h5>
                            <h2 class="card-text"> </h2>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-custom mb-3 shadow">
                        <div class="card-body text-centre">
                            <h5 class="card-title">Хора създали траектории</h5>
                            <h2 class="card-text"></h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="card-title">Графика (предстои)</h5>
                            <p class="text-muted">MQsto za grafikata.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>