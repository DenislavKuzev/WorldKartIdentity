@model List<WorldKartIdentity.ViewModel.TrackRequestViewModel>

@{
    ViewData["Title"] = "Заявени писти";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/adminuserstable.css" asp-append-version="true" />
}

<div class="container mt-5">
    <h2 class="page-title text-center mb-4">Заявени писти</h2>

    <table class="table admin-users-table">
        <thead>
            <tr>
                <th>Направи писта</th>
                <th>Име</th>
                <th>Държава</th>
                <th>Локация</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Track"
                           asp-action="CreateTrack"
                           asp-route-name="@request.Name"
                           asp-route-country="@request.Country"
                           asp-route-locationUrl="@request.LocationUrl"
                           class="admin-btn"
                           title="Създай писта"
                           style="display: inline-block;">
                            +
                        </a>
                    </td>

                    <td>@request.Name</td>
                    <td>@request.Country</td>
                    <td>
                        <a href="@request.LocationUrl" target="_blank">
                            Виж карта
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
