@model List<WorldKartIdentity.ViewModel.BlogViewModel>
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/blog.css" asp-append-version="true" />
}

@section Scripts{
    <script src="~/js/blog.js"></script>
}

<div class="d-flex flex-column align-items-end w-100 justify-content-end mt-5">

    <div class="container d-flex flex-column gap-3 justify-content-center position-relative text-white blog-container">
        @if (User.Identity.IsAuthenticated)
        {
            <button type="button" class="post-btn btn btn-dark rounded-pill px-4 py-2 fw-bold" data-bs-toggle="modal" data-bs-target="#threadModal">
                    <i class="bi bi-plus-lg"></i>
            </button>
        }
        else
        {
            <a class="post-btn btn btn-dark rounded-pill px-4 py-2 fw-bold text-decoration-none" asp-controller="User" asp-action="Login">
                <i class="bi bi-plus-lg"></i>
            </a>
        }
        

        @* @if(Model.Any())
        { *@
            @foreach (var blog in Model)
            {
                <div class="blog-card p-3 rounded-4 shadow-sm w-100 bg-dark">

                    <div class="d-flex">
                        <div class="me-3 flex-shrink-0">
                            <div class="avatar-container">
                                <img src="https://i.pravatar.cc/150?img=8" class="rounded-circle img-fluid" alt="User">
                        </div> @* todo: replace placeholder with the author's pfp' *@
                        </div>

                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <div>
                                    <span class="fw-bold me-1">@blog.Author.UserName</span>
                                    <span class="text-muted text-small">2d</span>
                                </div>
                                <div class="text-muted d-flex gap-3 align-items-center">
                                    <i class="bi bi-three-dots"></i>
                                </div>
                            </div>

                            <div class="mb-2 h-auto mw-100">
                                <p class="mb-0 fs-6 text-wrap"></p>
                            </div>

                            <div class="row g-2 my-3">

                                <div class="col-6">
                                    <img src="data:image/png;base64, @blog.PictureBase64" class="img-fluid rounded-4 thread-image w-100" alt="Image 1 description">
                                </div>

                            </div>

                            <div class="d-flex align-items-center gap-4 mt-2">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <button class="heart-btn action-icon-wrapper text-white" data-bid="@blog.Id" id="heartBtn">
                                    <svg class="heart-icon text-white" viewBox="0 0 25 25" width="20" height="20">
                                        <path d="M 12 21.35 l -1.45 -1.32 C 5.4 15.36 2 12.28 2 8.5 C 2 5.42 4.42 3 7 3 c 1.74 0 3.41 0.81 5 3 C 13.09 3.81 14.76 3 16.5 3 C 19.58 3 22 5.42 22 8.5 c 0 3.78 -3.4 6.86 -8.55 11.54 L 12 21.35 z"  stroke-linejoin="round" stroke-linecap="round" />
                                    </svg>
                                    <span class="likes-count">@blog.Likes</span>
                                </button>
                            }
                            
                                @* <div class="action-icon-wrapper text-small text-white">
                                <i class="bi bi-chat fs-5 rotate-90 text-white"></i> <span>17</span>
                            </div>
                            <div class="action-icon-wrapper text-small text-white">
                                <i class="bi bi-repeat fs-5 text-white"></i> <span>49</span>
                            </div>
                            <div class="action-icon-wrapper text-white">
                                <i class="bi bi-send fs-5 rotate-90 text-white"></i>
                            </div> *@
                            </div>
                        </div>
                    </div>

                </div>
            }

        @* }
        else
        {
            <div class="text-center w-100">
                <h5>No blogs available</h5>
            </div>
        } *@

    </div>
</div>

@await Html.PartialAsync("/Views/PartialViews/_CreateBlog.cshtml", new BlogViewModel())


                              
