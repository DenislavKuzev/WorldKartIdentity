@model WorldKartIdentity.ViewModel.TrackViewModel

@{
    ViewData["Title"] = "TrackRegistration";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/loginregistration.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/maps.js"></script>
}

<div class="register-container">
    <h2>Регистрация на писта</h2>

    <form asp-action="CreateTrack" asp-controller="Track" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Име на писта </label>
            <input asp-for="Name" type="text" name="Name" required />
            <span class="text-danger"></span>
        </div>
        @* 
    <div class="form-group">
        <label>Имейл на писта</label>
        <input type="email" name="Email" required />
        <span class="text-danger"></span>
    </div> *@

        <div class="form-group">
            <label>Дължина</label>
            <input asp-for="Length" type="text" name="Length" required />
            <span class="text-danger"></span>
        </div>

        <div class="form-group">
        <label >Изображение на пистата</label>
            <input asp-for="PictureFile" type="file" name="PictureFile" accept="image/*" required />
        </div>

        <button type="submit" class="btn-register">Регистрирай пистата</button>
    </form>
</div>
