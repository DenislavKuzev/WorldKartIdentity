@model WorldKartIdentity.ViewModel.TrackViewModel

@{
    ViewData["Title"] = "EditTrack";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/trackdetails.css" asp-append-version="true" />
}

<section class="breadcrumb-section set-bg" style="background-image:url('/img/trackbackground.png');
                background-size:cover;
                background-position:center;
                background-repeat:no-repeat;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>@Model.Name - Редактиране</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<form asp-action="EditTrack" asp-controller="Track" method="post">
    <input type="hidden" asp-for="Id" />
    <section class="class-details-section description">
        <div class="container">
            <div class="row">
                <div class="col-lg-11">
                    <div class="class-details-text">
                        <div class="cd-text">
                            <div class="cd-single-item text-danger">
                                <h2>Описание</h2>
                                <textarea asp-for="Description" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-sm-6">
                    <div class="section-title contact-title">
                        <span>Данни на пистата</span>
                    </div>
                    <div class="cw-text text-danger">
                        <h2>Имейл</h2>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="cw-text text-danger">
                        <h2>Телефон</h2>
                        <input asp-for="TelNumber" class="form-control" />
                    </div>
                    <div class="cw-text text-danger">
                        <h2>Работно време</h2>
                        <input asp-for="Worktime" class="form-control" />
                    </div>
                    <br />
                    <button type="submit" class="btn btn-danger">Запази</button>
                    <a asp-action="Tracks" asp-controller="Admin" class="btn btn-secondary">Отказ</a>
                </div>
            </div>
        </div>
    </section>
    
</form>
