@model WorldKartIdentity.ViewModel.ResetPasswordViewModel

@{
    ViewData["Title"] = "Нулиране на парола";
    Layout = "~/Views/Shared/_NewLayout.cshtml";    
}

@section Styles {
    <link rel="stylesheet" href="~/css/loginregistration.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/passwordreset.js" asp-append-version="true"></script>
}

<div class="register-container">
    <h2>Нулиране на парола</h2>

    <form asp-action="ResetPassword" asp-controller="User" method="post">
        <input asp-for="Token" type="hidden" />
        <input asp-for="Email" type="hidden" />

        <div class="form-group pass-new mb-3">
            <label class="form-label">Нова парола</label>
            <div class="input-group">
                <input asp-for="NewPassword" id="newPassword" class="form-control" type="password" name="NewPassword" required minlength="8" />
                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="#newPassword" aria-pressed="false" title="Покажи/Скрий паролата">
                    <i class="bi bi-eye" aria-hidden="true"></i>
                </button>
            </div>
            <span class="text-danger"></span>
        </div>

        <div class="form-group pass-new-confirm mb-3">
            <label class="form-label">Потвърдете новата парола</label>
            <div class="input-group">
                <input id="confirmPassword" class="form-control" type="password" name="ConfirmPassword" required minlength="8" />
                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="#confirmPassword" aria-pressed="false" title="Покажи/Скрий паролата">
                    <i class="bi bi-eye" aria-hidden="true"></i>
                </button>
            </div>
            <span class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn-login btn btn-danger w-100 reset-btn">Задай нова парола</button>
        </div>

        <div class="form-footer text-center mt-2">
            <p>Върнете се към <a asp-controller="User" asp-action="Login">Вход</a> или <a asp-controller="User" asp-action="Registration">Регистрация</a></p>
        </div>
    </form>
</div>
